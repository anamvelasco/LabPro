<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20C827"
    tools:context=".ui.historial.HistorialFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/historial_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/historial_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reservasRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/card_view_reserva_item">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <!-- RecyclerView para mostrar la lista de reservas -->

    <!-- Agrega un TextView para mostrar la informaciÃ³n de reserva -->

</androidx.constraintlayout.widget.ConstraintLayout>
