<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.historial.HistorialFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/createGalleryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/createGallery_edit_text"
            android:textColor="@color/white"
            android:textColorLink="#026937" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/galeryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/card_view_gallery_item" />
    </LinearLayout>

    <!-- RecyclerView para mostrar la lista de reservas -->

    <!-- Agrega un TextView para mostrar la informaciÃ³n de reserva -->

</androidx.constraintlayout.widget.ConstraintLayout>
